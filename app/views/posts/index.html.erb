<h1>FaceLook</h1>
<p><%= notice %></p>
<div class="container">
<h3><span class="label label-info"><%= link_to "今の気持ち、シェアしよう", new_post_path %></span></h3>
<ul>
<% @posts.each do |post| %>
  <li class="content_area">
    <p><span>Content:<%= post.content %></span></p>
    <p><span>User:<%= post.user.name %></span></p>
    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default"><%= link_to "Show", post_path(post.id) %></button>
    <% if post.user_id == current_user.id %>
      <button type="button" class="btn btn-default"><%= link_to "Edit", edit_post_path(post.id) %></button>
      <button type="button" class="btn btn-default"><%= link_to "Destroy", post_path(post.id), method: :delete, data: {confirm: '本当に削除していいですか？'} %></button>
    <% end %>
    </div>
  </li>
<% end %>
</div>
